# Application
NODE_ENV=development
PORT=4000
FRONTEND_BASE_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/paycode?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
COOKIE_NAME=paycode_session

# JWE Configuration
JWE_ENABLED=true
JWE_SECRET=your-256-bit-secret-key-must-be-32-chars-long!!

# JWKS Configuration
JWKS_ROTATION_INTERVAL=86400000

# KMS Configuration
KMS_KEY_ID=sensitive-data-key
KMS_MASTER_KEY=your-master-key-for-kms-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30
RATE_LIMIT_TRANSACTION_MAX=10

# Bcrypt
BCRYPT_COST=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PROCESSING_TTL_MS=3600000
REDIS_PROCESSED_TTL_MS=604800000

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_PREFETCH=50
RABBITMQ_RETRY_MAX=5
RABBITMQ_BACKOFF_BASE_MS=1000

# Email Validation (if needed)
EMAIL_VALIDATION_TTL_HIT=1800
EMAIL_VALIDATION_TTL_MISS=120